<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/rock_white_item_stl"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
<LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:textSize="@dimen/forum_item_title_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/rock_default_text_color"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:layout_marginLeft="20dp"
                android:text=""
                android:id="@+id/title"
                />
        <TextView
                android:textSize="@dimen/forum_item_describe_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/title"
                android:gravity="center_horizontal"
                android:text=""
                android:id="@+id/describe"
                />
        <!--<ImageView-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:src="@drawable/xiaoqu_haomatong"-->
                <!--android:layout_marginRight="15dp"-->
                <!--android:layout_width="30dp"-->
                <!--android:layout_height="30dp"/>-->
    </RelativeLayout>
    <LinearLayout
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text=""
                android:id="@+id/author"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"/>
        <LinearLayout
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:id="@+id/create_time"
                    android:gravity="center"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
            <TextView
                    android:gravity="center"
                    android:layout_marginRight="15dp"
                    android:id="@+id/comment_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>

</LinearLayout>