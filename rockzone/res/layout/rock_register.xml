<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#f6f6f6"
    android:id="@+id/register_1"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
  <include layout="@layout/rock_head"/>
    <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="350dp"
            android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
            <EditText
                android:background="@drawable/zhuce_biankuang"
                android:id="@+id/reg_et_phone"
                android:paddingLeft="@dimen/text_left_padding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:hint="输入手机号码"
                android:textSize="15dp" >

            </EditText>
</RelativeLayout>
    <RelativeLayout
            android:layout_marginTop="7dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayout1" >
            <EditText
                android:id="@+id/reg_et_inviter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/text_left_padding"
                android:layout_marginTop="11dp"
                android:background="@drawable/zhuce_biankuang"
                android:ems="10"
                android:hint="输入邀请人手机号码（选填）"
                android:textSize="15dp" />


        </RelativeLayout>
<TextView
        android:layout_marginTop="10dp"
        android:text="PS:  邀请人和被邀请人可获得100积分"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <EditText
                android:id="@+id/reg_et_message"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:paddingLeft="@dimen/text_left_padding"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/zhuce_biankuang"
                android:hint="输入验证码" />



            <TextView
                android:gravity="center"
                android:background="@drawable/yanzheng_selector"
                android:id="@+id/reg_tv_sendMessage"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textColor="#ffffffff"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:textSize="15dp"
                android:layout_centerVertical="true"
                android:text=" 获取验证码" />
</LinearLayout>
        <Button
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:id="@+id/reg_next_step"
            android:clickable="false"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="#ffffffff"
            android:textSize="20dp"
            android:background="@drawable/zhuce_next_selector"
            android:text="下一步" />
    </LinearLayout>

</LinearLayout>
