<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@drawable/rock_default_item_stl"
              android:layout_width="match_parent"
              android:layout_height="100dp">
    <ImageView
            android:id="@+id/gonggao_logo"
            android:background="#00000000"
            android:src="@drawable/gonggao_laba"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            >
        <TextView
                android:textColor="@color/rock_default_text_color"
                android:layout_marginLeft="@dimen/uc_setting_text_margin_left"
                android:layout_marginTop="@dimen/xiaoqu_gonggao_item_margin_top"
                android:textSize="18sp"
                android:id="@+id/title"
                android:text="标题"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="@dimen/uc_setting_text_margin_left"
                android:text="2014-10-13"
                android:layout_marginTop="@dimen/xiaoqu_gonggao_item_margin_top"
                android:id="@+id/create_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="@dimen/uc_setting_text_margin_left"
                android:text="描述"
                android:layout_marginTop="@dimen/xiaoqu_gonggao_item_margin_top"
                android:id="@+id/describe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>