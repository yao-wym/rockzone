<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_relativelayout_header"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/shouye_daohang_background">

    <ImageButton
            android:id="@+id/head_left"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/back_stl"
            android:src="@drawable/fanhui"/>


    <ImageButton
            android:id="@+id/head_right"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:layout_alignParentRight="true"
            android:background="#00000000"
            android:src="@drawable/shouye_xiaoxi"/>
    <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:id="@+id/head_middle">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text=""
            android:id="@+id/community_name"
            android:layout_centerHorizontal="true" android:textColor="#fff" android:shadowColor="#854033"
            android:textSize="@dimen/space_28"/>
    <ImageButton android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/community_jiantou"
                 android:layout_toRightOf="@+id/community_name"
                 android:layout_centerVertical="true"
                 android:layout_marginRight="10dp"
                 android:background="#00000000"
                 />
    </RelativeLayout>
</RelativeLayout>
