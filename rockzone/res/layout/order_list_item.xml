<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:background="@color/white"
              android:layout_height="60dp">
    <RelativeLayout
            android:id="@+id/headRL"
            android:layout_width="60dp"
            android:layout_height="60dp">
        <ImageView
                android:id="@+id/goods_icon"
                android:scaleType="fitXY"
                android:layout_centerInParent="true"
                android:background="@drawable/rock_zone_default_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        <ImageView
                android:layout_alignParentRight="true"
                android:background="@color/dividing_line_color"
                android:layout_width="@dimen/dividing_line"
                android:layout_height="match_parent"/>
    </RelativeLayout>

    <RelativeLayout
            android:background="@drawable/uc_item_stl"
            android:gravity="left"
            android:layout_toRightOf="@+id/headRL"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:singleLine="true"
                android:ems="20"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:id="@+id/title"
                />
        <TextView
                android:layout_alignParentRight="true"
                android:id="@+id/create_time"
                android:gravity="center"
                android:textColor="@color/red"
                android:layout_width="120dp"
                android:layout_height="30dp"/>
        <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:text="花费积分"
                    />
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:textColor="@color/red"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:id="@+id/tox_money_need"
                    />
        </LinearLayout>
        <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="150dp"
                android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="购买数"
                />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:textColor="@color/red"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:id="@+id/buy_num"
                />
        </LinearLayout>
    </RelativeLayout>
    <ImageView
            android:background="@color/dividing_line_color"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dividing_line"/>
</RelativeLayout>